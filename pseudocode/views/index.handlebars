<h1>Pseudocode:</h1>

<ul>
    {{#each tasks}}
    <li>
        <p>
            {{this.id}}. {{this.task}}
            <br>
            <button data-taskid="{{this.id}}" class="deltask">Delete Movie!</button>
        </p>
    </li>
    {{/each}}
</ul>

<h2>Add a task</h2>
<form id="createtask" class="button-size">
    <textarea type="text" name="task"></textarea><br>
    <button type="submit">Add task!</button><br>
</form>

<h2>Change a Task</h2>
<form id="updatetask" class="button-size">
    <select name="id">
        {{#each tasks}}
        <option value="{{this.id}}">{{this.task}}</option>
        {{/each}}
    </select><br>
    <textarea type="text" name="task" placeholder="task"></textarea><br>
    <button type="submit">Update Task!</button><br>
</form>

<script type="text/javascript">

    $("#createtask").on("submit", function (event) {
        event.preventDefault();
        var newtask = {
