        var id = $(this).attr("data-taskid");
        $.ajax("/tasks/" + id, {
            method: "DELETE"
        }).then(function () {
            location.reload();
        });
    });

    $("#updatetask").on("submit", function (event) {
        event.preventDefault();
        var id = $("[name=id]").val().trim();
        var updatedTask = {
            task: $("#updatetask [name=task]").val().trim()
        };
        $.ajax("/tasks/" + id, {
            method: "PUT",
            data: updatedTask
        }).then(function () {
            location.reload();
        })
    })

</script>